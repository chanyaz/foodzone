<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.maya.wcustomer.fragments.vehicle.details.VehicleDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="100dp"
                    android:rotation="180"
                    android:layout_marginLeft="-20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/round_wings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/car_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="vertical"
                        android:id="@+id/llHead"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.CardView
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.google.android.gms.maps.MapView
                                android:id="@+id/mapView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </com.google.android.gms.maps.MapView>

                        </android.support.v7.widget.CardView>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="70dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="4dp"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/ic_arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp" />
                        <com.maya.wcustomer.customviews.SFRegularTextView
                            android:text="Current Location"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:drawablePadding="10dp"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        </LinearLayout>,

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.maya.wcustomer.customviews.SFMediumTextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:text="ACTIONS"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewAction"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
</FrameLayout>
