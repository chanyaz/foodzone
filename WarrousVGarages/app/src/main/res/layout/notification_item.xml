<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="15dp"
    android:background="@drawable/corner_radius_white_3"
    android:elevation="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.maya.vgarages.customviews.RoundedImageView
        android:id="@+id/imgNotification"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        app:siRadius="3dp"
        app:siBorderWidth="0dp"
        app:siBorderColor="@color/white"
        android:backgroundTint="@color/map_transparent"
        android:background="@drawable/corner_radius_white_3"
        android:layout_width="70dp"
        android:layout_height="70dp" />


    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:id="@+id/tvTitle"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:text="Discount 10%"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.maya.vgarages.customviews.WSMediumTextView
            android:id="@+id/tvContent"
            android:textColor="@color/normal_text_color"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:text="In Sai Garage for water wash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.maya.vgarages.customviews.WSRegularTextView
            android:id="@+id/tvTimeAgo"
            android:layout_marginTop="5dp"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="15 days ago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>