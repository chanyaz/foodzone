<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nestedScrollView"
    android:orientation="vertical"
    android:background="#262626"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:background="#262626"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#B91A30"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="visible"
                android:src="@drawable/ic_oem_logo"
                android:layout_width="80dp"
                android:layout_height="35dp" />

            <View
                android:visibility="visible"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:layout_width="1dp"
                android:layout_height="40dp">

            </View>
            <com.maya.wadmin.customviews.BoldTextView
                android:id="@+id/tvCurrentPlatform"
                android:layout_marginLeft="26dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Vehicle Logistics"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.maya.wadmin.customviews.RegularTextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:text="Gokul Kalagara"
            android:textColor="@color/white"
            android:textSize="26sp" />
        <com.maya.wadmin.customviews.MediumTextView
            android:id="@+id/tvUserRoleName"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Sales Manager"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/ic_profile" />

                <com.maya.wadmin.customviews.MediumTextView
                    android:id="@+id/tvUserProfile"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="14dp"
                    android:text="User Profile"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="24dp"
                android:background="#4FFFFFFF"></View>
        </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/ic_settings" />

                    <com.maya.wadmin.customviews.MediumTextView
                        android:id="@+id/tvSettings"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="14dp"
                        android:text="Account Preferences"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="24dp"
                    android:background="#4FFFFFFF"></View>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/ic_lightbulb" />

                    <com.maya.wadmin.customviews.MediumTextView
                        android:id="@+id/tvFAQ"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="14dp"
                        android:text="FAQ'S"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="24dp"
                    android:background="#4FFFFFFF"></View>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/ic_logout" />

                    <com.maya.wadmin.customviews.MediumTextView
                        android:id="@+id/tvSignOut"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="14dp"
                        android:text="Sign Out"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="67dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/ic_shuffle" />

                <com.maya.wadmin.customviews.MediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="14dp"
                    android:text="Switch Platform:"
                    android:textColor="#80FFFFFF"
                    android:textSize="18sp" />

            </LinearLayout>

            <com.maya.wadmin.customviews.RegularTextView
                android:id="@+id/tvOtherPlatform"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_other_platform"
                android:gravity="center"
                android:background="@drawable/shuffle_drawable"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="-5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="Sales Operations"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>