<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.maya.vgarages.fragments.profile.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/coordinatorLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <!--<ScrollView-->

          <!--android:scrollbars="none"-->
          <!--android:layout_width="match_parent"-->
          <!--android:layout_height="match_parent">-->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <LinearLayout
              android:id="@+id/llProfile"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

              <com.maya.vgarages.customviews.RoundedImageView
                  android:id="@+id/imgUser"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="20dp"
                  android:gravity="center"
                  app:siRadius="50dp"
                  app:siBorderColor="@color/white"
                  app:siBorderWidth="2dp" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_margin="5dp"
                  android:gravity="center"
                  android:orientation="vertical">

                  <com.maya.vgarages.customviews.SFSemiBoldTextView
                      android:maxLines="1"
                      android:layout_marginLeft="40dp"
                      android:layout_marginRight="40dp"
                      android:ellipsize="end"
                      android:layout_width="wrap_content"
                      android:id="@+id/tvUserName"
                      android:layout_height="wrap_content"
                      android:text="Gokul Kalagara"
                      android:textColor="@color/normal_text_color"
                      android:textSize="16sp" />

                  <com.maya.vgarages.customviews.MediumTextView
                      android:maxLines="1"
                      android:layout_marginLeft="40dp"
                      android:layout_marginRight="40dp"
                      android:ellipsize="end"
                      android:id="@+id/tvAddress"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="15dp"
                      android:layout_marginTop="10dp"
                      android:text="Male, Hyderabad, TS"
                      android:textColor="@color/hash_text_color"
                      android:textSize="14sp" />


              </LinearLayout>


          </LinearLayout>
          <View
              android:background="@color/app_background_color"
              android:layout_width="match_parent"
              android:layout_height="1dp">

          </View>
         <FrameLayout
             android:id="@+id/frameLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

         </FrameLayout>







      </LinearLayout>
      <!--</ScrollView>-->

  </android.support.design.widget.CoordinatorLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="25dp"
            android:tint="@color/white"
            android:src="@drawable/ic_add_black"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    </RelativeLayout>

</FrameLayout>
