<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/corner_radius_white_3"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.maya.vgarages.customviews.WSSemiBoldTextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:textSize="16sp"
        android:textColor="@color/normal_text_color"
        android:text="Confirm vehicle?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.maya.vgarages.customviews.WSMediumTextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:textColor="@color/light_new_gray"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:text="Do you want to continue with this vehicle?"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/cbMakeDefault"
        android:text="make it default"
        android:textColor="@color/normal_text_color"
        android:checked="true"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:id="@+id/tvNo"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/light_orange"
            android:text="NO"
            android:layout_width="40dp"
            android:layout_height="25dp" />

        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:id="@+id/tvYes"
            android:layout_marginLeft="35dp"
            android:textSize="15sp"
            android:textColor="@color/light_orange"
            android:text="YES"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="25dp" />

    </LinearLayout>


</LinearLayout>