<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    android:background="@drawable/corner_radius_white_3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.maya.vgarages.customviews.WSSemiBoldTextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:textSize="16sp"
        android:id="@+id/tvTitle"
        android:textColor="@color/normal_text_color"
        android:text="Reschedule Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.maya.vgarages.customviews.WSMediumTextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="6dp"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Pick Date"
        android:textColor="@color/light_new_gray"
        android:id="@+id/tvDate"
        android:background="@drawable/corner_radius_white_8"
        android:drawableRight="@drawable/ic_date"
        android:drawableTint="@color/light_new_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <com.maya.vgarages.customviews.WSMediumTextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="6dp"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Pick Time"
        android:textColor="@color/light_new_gray"
        android:id="@+id/tvTime"
        android:background="@drawable/corner_radius_white_8"
        android:drawableRight="@drawable/ic_timer"
        android:drawableTint="@color/light_new_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:id="@+id/tvNo"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/light_new_gray"
            android:text="CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:id="@+id/tvYes"
            android:layout_marginLeft="35dp"
            android:textSize="15sp"
            android:textColor="@color/light_orange"
            android:text="RESCHEDULE"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

    </LinearLayout>


</LinearLayout>
</android.support.design.widget.CoordinatorLayout>