<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llHolder"
    android:background="@drawable/corner_radius_white_3"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
        android:id="@+id/imgGarage"
        app:autoStart="true"
        app:baseColor="#fffbfbfb"
        app:deepColor="#fff2f2f2"
        app:duration="1500"
        app:interval="1000"
        app:progressLength="120.0dip"
        app:radius="0dip"
        android:background="@color/app_hash_pool"
        android:scaleType="centerCrop"
        android:layout_width="110dp"
        android:layout_height="110dp" />


    <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
        android:elevation="1dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="-25dp"
        app:autoStart="true"
        app:baseColor="#fffbfbfb"
        app:deepColor="#ffffff"
        app:duration="1500"
        app:interval="1000"
        app:progressLength="120.0dip"
        app:radius="25dip"
        android:layout_width="50dp"
        android:layout_height="50dp">




    </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
            android:id="@+id/tvGarageName"
            android:textSize="16sp"
            android:ellipsize="end"
            app:baseColor="#fffbfbfb"
            app:deepColor="#fff2f2f2"
            app:duration="1500"
            app:interval="1000"
            app:progressLength="120.0dip"
            app:radius="0dip"
            android:maxLines="1"
            android:textColor="@color/normal_text_color"
            android:text="Gokul Kalagara Garage"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tvShopType"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120.0dip"
                app:radius="0dip"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="EXPRESS SERVICE SHOP"
                android:textSize="12sp"
                android:textColor="@color/light_new_gray"
                android:layout_width="match_parent"
                android:layout_height="14dp" />
            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:gravity="right"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120.0dip"
                app:radius="0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="60dp"
                android:layout_height="14dp">


            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tvOpen"
                android:ellipsize="end"
                android:maxLines="1"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120.0dip"
                app:radius="0dip"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Open Now"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="70dp"
                android:layout_height="14dp" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/light_gray"
                android:src="@drawable/circle_white"
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tvDistance"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                app:baseColor="#fffbfbfb"
                app:deepColor="#fff2f2f2"
                app:duration="1500"
                app:interval="1000"
                app:progressLength="120.0dip"
                app:radius="0dip"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="400 meters from you"
                android:textSize="12sp"
                android:textColor="@color/light_new_gray"
                android:layout_width="match_parent"
                android:layout_height="14dp" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>