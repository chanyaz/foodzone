<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            app:elevation="0dp"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                app:elevation="0dp"

                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:scrimAnimationDuration="3"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways">

                <RelativeLayout
                    app:layout_collapseMode="parallax"
                    android:fitsSystemWindows="true"
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_collapseParallaxMultiplier="0.5"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:elevation="4dp"
                            android:background="@color/mainColorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:elevation="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:elevation="4dp"
                        android:id="@+id/llMainHead"
                        android:background="@drawable/corner_radius_white_8"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.maya.wadmin.customviews.SFRegularTextView
                            android:id="@+id/tvTopBarItem"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:drawableRight="@drawable/ic_top_bar_down"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="#58595B"
                            android:text="bdbhcdbhb kdjn dj njn d jc j d n jdjdjd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar"
                    android:layout_width="0.5dp"
                    android:layout_height="8dp"
                    app:layout_collapseMode="pin"/>



            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>
        <FrameLayout
            android:id="@+id/frameLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="com.maya.wadmin.fragments.delivery.VehicleDeliveryFragment">




        </FrameLayout>




    </android.support.design.widget.CoordinatorLayout>




    <com.maya.wadmin.customviews.BoldTextView
        android:elevation="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Create Zone"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tvCreateZone"
        android:textSize="18sp"
        android:background="@drawable/corner_radius_primary_30"
        android:layout_width="140dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llTopBarPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewTopBar"
            android:elevation="4dp"
            android:background="@drawable/corner_radius_white_8"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>