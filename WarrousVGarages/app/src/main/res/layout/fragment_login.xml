<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context="com.maya.vgarages.fragments.start.LoginFragment">

    <!-- TODO: Update blank fragment layout -->



    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.maya.vgarages.customviews.WSEditText
                android:id="@+id/etUsername"
                android:elevation="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hash_text_color"
                android:hint="Enter Username"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corner_radius_white_3"
                android:layout_width="match_parent"
                android:layout_height="46dp" />
            <com.maya.vgarages.customviews.WSEditText
                android:id="@+id/etPassword"
                android:elevation="2dp"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hash_text_color"
                android:hint="Enter Password"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corner_radius_white_3"
                android:layout_width="match_parent"
                android:layout_height="46dp" />
            <com.maya.vgarages.customviews.WSMediumTextView
                android:id="@+id/tvLogin"
                android:elevation="2dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corner_radius_fb_3"
                android:layout_width="match_parent"
                android:layout_height="46dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.maya.vgarages.customviews.WSRegularTextView
                    android:textSize="12sp"
                    android:textColor="@color/hash_text_color"
                    android:text="Not Already Register ?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.maya.vgarages.customviews.WSRegularTextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/hash_text_color"
                    android:textSize="12sp"
                    android:text="New"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.maya.vgarages.customviews.WSSemiBoldTextView
                    android:id="@+id/tvSignUp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:text="Sign-Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>



</FrameLayout>
