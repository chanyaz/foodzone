<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_white_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:id="@+id/imgDtc"
            android:src="@drawable/ic_power_steering"
            android:layout_marginBottom="15dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />


        <com.maya.wadmin.customviews.SFMediumTextView
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="60dp"
            android:id="@+id/tvCodeDesc"
            android:textSize="16sp"
            android:text="Maya is Awesome"
            android:textColor="#5C5C5C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:padding="2dp"
            android:id="@+id/imgStatus"
            android:src="@drawable/ic_bold_correct"
            android:layout_marginBottom="15dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />


        <LinearLayout
            android:id="@+id/llhead"
            android:layout_below="@+id/imgStatus"
            android:background="#E4E5E6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>