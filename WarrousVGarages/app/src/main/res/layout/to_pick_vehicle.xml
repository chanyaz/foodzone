<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#10000000"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_vgarage_logo"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <com.maya.vgarages.customviews.WSMediumTextView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Please pick vehicle before services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.maya.vgarages.customviews.WSSemiBoldTextView
        android:id="@+id/tvGotoVehicles"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/corner_radius_white_3"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:text="Goto Vehicles"
        android:elevation="2dp"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="40dp" />





</LinearLayout>