<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.maya.wadmin.fragments.home.options.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_gravity="center"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <android.support.v7.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="75dp"
                app:cardElevation="8dp"
                android:layout_width="150dp"
                android:layout_height="150dp">
            <ImageView
                android:background="@drawable/circle_red"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maya.wadmin.customviews.SFSemiBoldTextView
                    android:layout_margin="15dp"
                    android:textSize="15sp"
                    android:text="First Name"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.maya.wadmin.customviews.SFMediumTextView
                    android:id="@+id/tvFirstName"
                    android:layout_marginLeft="15dp"
                    android:text="Gokul"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/app_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <com.maya.wadmin.customviews.SFSemiBoldTextView

                    android:layout_margin="15dp"
                    android:textSize="15sp"
                    android:text="Last Name"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.maya.wadmin.customviews.SFMediumTextView
                    android:id="@+id/tvLastName"
                    android:layout_marginLeft="15dp"
                    android:text="Kalagara"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:background="@color/app_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <com.maya.wadmin.customviews.SFSemiBoldTextView
                    android:layout_margin="15dp"
                    android:textSize="15sp"
                    android:text="User Name"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.maya.wadmin.customviews.SFMediumTextView
                    android:id="@+id/tvUserName"
                    android:layout_marginLeft="15dp"
                    android:text="gokulkalagara@gmail.com"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:background="@color/app_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <com.maya.wadmin.customviews.SFSemiBoldTextView
                    android:layout_margin="15dp"
                    android:textSize="15sp"
                    android:text="User Roll"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.maya.wadmin.customviews.SFMediumTextView
                    android:id="@+id/tvUserRoll"
                    android:layout_marginLeft="15dp"
                    android:text="Super Admin"
                    android:textColor="#505050"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
