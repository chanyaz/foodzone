<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:background="@color/white"
    tools:context=".fragments.other.AddAddressFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/coordinatorLayout"
      android:layout_marginBottom="45dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <ScrollView
                  android:scrollbars="none"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <RelativeLayout
                          android:elevation="2dp"
                          android:background="@color/colorPrimary"
                          android:layout_width="match_parent"
                          android:layout_height="180dp">
                          <com.airbnb.lottie.LottieAnimationView
                              android:layout_centerHorizontal="true"
                              android:id="@+id/lottieAnimationView"
                              android:layout_width="180dp"
                              android:layout_height="180dp"
                              app:lottie_autoPlay="true"
                              app:lottie_loop="true"
                              app:lottie_rawRes="@raw/world_locations" />



                      </RelativeLayout>
                      <com.maya.vgarages.customviews.WSMediumTextView
                          android:layout_marginLeft="20dp"
                          android:textColor="@color/gray"
                          android:layout_marginTop="15dp"
                          android:layout_marginRight="15dp"
                          android:layout_marginBottom="5dp"
                          android:text="Address Line1"
                          android:textSize="13sp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <com.maya.vgarages.customviews.WSEditText
                          android:visibility="visible"
                          android:hint=""
                          android:id="@+id/etAddress1"
                          android:textColor="@color/black"
                          android:paddingLeft="15dp"
                          android:textSize="15sp"
                          android:inputType="textPersonName"
                          android:layout_marginLeft="15dp"
                          android:layout_marginRight="15dp"
                          android:layout_marginBottom="15dp"
                          android:backgroundTint="@color/app_background_color"
                          android:background="@drawable/corner_radius_white_3"
                          android:layout_width="match_parent"
                          android:layout_height="40dp" />

                      <com.maya.vgarages.customviews.WSMediumTextView
                          android:layout_marginLeft="20dp"
                          android:textColor="@color/gray"
                          android:layout_marginRight="15dp"
                          android:layout_marginBottom="5dp"
                          android:textSize="13sp"
                          android:text="Address Line2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                      <com.maya.vgarages.customviews.WSEditText
                          android:textColor="@color/black"
                          android:paddingLeft="15dp"
                          android:textSize="15sp"
                          android:inputType="textPersonName"
                          android:id="@+id/etAddress2"
                          android:layout_marginLeft="15dp"
                          android:layout_marginRight="15dp"
                          android:backgroundTint="@color/app_background_color"
                          android:background="@drawable/corner_radius_white_3"
                          android:layout_width="match_parent"
                          android:layout_height="40dp" />

                      <com.maya.vgarages.customviews.WSMediumTextView
                          android:layout_marginLeft="20dp"
                          android:textColor="@color/gray"
                          android:layout_marginTop="15dp"
                          android:layout_marginRight="15dp"
                          android:layout_marginBottom="5dp"
                          android:text="City"
                          android:textSize="13sp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                      <com.maya.vgarages.customviews.WSEditText
                          android:hint=""
                          android:inputType="textPersonName"
                          android:id="@+id/etCity"
                          android:textColor="@color/black"
                          android:paddingLeft="15dp"
                          android:textSize="15sp"
                          android:layout_marginLeft="15dp"
                          android:layout_marginRight="15dp"
                          android:backgroundTint="@color/app_background_color"
                          android:background="@drawable/corner_radius_white_3"
                          android:layout_width="match_parent"
                          android:layout_height="40dp" />

                      <LinearLayout
                          android:weightSum="2"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <com.maya.vgarages.customviews.WSMediumTextView
                              android:layout_weight="1"
                              android:inputType="textPersonName"
                              android:layout_marginLeft="20dp"
                              android:textColor="@color/gray"
                              android:layout_marginTop="15dp"
                              android:layout_marginRight="15dp"
                              android:layout_marginBottom="5dp"
                              android:text="State"
                              android:textSize="13sp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content" />
                          <com.maya.vgarages.customviews.WSMediumTextView
                              android:layout_weight="1"
                              android:layout_marginLeft="5dp"
                              android:textColor="@color/gray"
                              android:layout_marginTop="15dp"
                              android:layout_marginRight="15dp"
                              android:layout_marginBottom="5dp"
                              android:text="Zip Code"
                              android:textSize="13sp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content" />

                      </LinearLayout>

                      <LinearLayout
                          android:weightSum="2"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                          <com.maya.vgarages.customviews.WSEditText
                              android:layout_weight="1"
                              android:hint=""
                              android:inputType="textPersonName"
                              android:id="@+id/etState"
                              android:textColor="@color/black"
                              android:paddingLeft="15dp"
                              android:textSize="15sp"
                              android:layout_marginBottom="15dp"
                              android:layout_marginRight="15dp"
                              android:layout_marginLeft="15dp"
                              android:backgroundTint="@color/app_background_color"
                              android:background="@drawable/corner_radius_white_3"
                              android:layout_width="match_parent"
                              android:layout_height="40dp" />
                          <com.maya.vgarages.customviews.WSEditText
                              android:layout_weight="1"
                              android:hint=""
                              android:maxLength="6"
                              android:inputType="number"
                              android:id="@+id/etZipCode"
                              android:textColor="@color/black"
                              android:paddingLeft="15dp"
                              android:textSize="15sp"
                              android:layout_marginBottom="15dp"
                              android:layout_marginRight="15dp"
                              android:backgroundTint="@color/app_background_color"
                              android:background="@drawable/corner_radius_white_3"
                              android:layout_width="match_parent"
                              android:layout_height="40dp" />
                      </LinearLayout>


                  </LinearLayout>

              </ScrollView>

          </LinearLayout>

  </android.support.design.widget.CoordinatorLayout>

        <ImageView
            android:id="@+id/imgBack"
            android:padding="5dp"
            android:tint="@color/white"
            android:layout_margin="10dp"
            android:src="@drawable/ic_left_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:id="@+id/tvSaveAddress"
            android:elevation="8dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="SAVE ADDRESS"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </RelativeLayout>

</FrameLayout>