<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="5dp"
    android:elevation="4dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_gravity="center_vertical"
            app:cardElevation="8dp"
            app:cardCornerRadius="26.5dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.maya.wadmin.customviews.CircularView
                android:id="@+id/imgSalesPerson"
                android:src="@color/app_hash_pool"
                android:layout_width="53dp"
                android:layout_height="53dp" />
        </android.support.v7.widget.CardView>


            <com.maya.wadmin.customviews.SFSemiBoldTextView
                android:layout_gravity="center"
                android:id="@+id/tvSalesPerson"
                android:maxLines="1"
                android:layout_marginRight="8dp"
                android:textSize="26sp"
                android:textColor="#58595B"
                android:text="Kassandra K"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@drawable/corner_radius_white_6"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>