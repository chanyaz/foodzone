<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/corner_radius_white_6"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.maya.wadmin.customviews.SFMediumTextView
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:text="Continue to logout?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#44909090"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <com.maya.wadmin.customviews.SFMediumTextView
            android:id="@+id/tvNo"
            android:elevation="8dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/unselected_corner_6"
            android:text="No"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="35dp" />

        <com.maya.wadmin.customviews.SFMediumTextView
            android:id="@+id/tvYes"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/corner_radius_primary_6"
            android:text="Yes"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="100dp"
            android:layout_height="35dp" />


    </LinearLayout>

</LinearLayout>