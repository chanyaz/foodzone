<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/corner_radius_white_8"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgVehicle"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/corner_radius_hash_pool_6"
            android:layout_width="90dp"
            android:layout_height="65dp" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.maya.wadmin.customviews.SFBoldTextView
                android:id="@+id/tvVin"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#5C5C5C"
                android:text="3KPFL4A74JE177017"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.maya.wadmin.customviews.SFRegularTextView
                android:id="@+id/tvOther"
                android:maxLines="1"
                android:layout_marginTop="7dp"
                android:textSize="15sp"
                android:textColor="#C45C5C5C"
                android:text="Kia Optima 2017 dvdvddvlkmdkvmkdmvkdmvkm"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:scaleType="center"
            android:tint="#FFA552"
            android:id="@+id/imgClick"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_connected_true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <View
        android:id="@+id/bottomView"
        android:layout_marginLeft="8dp"
        android:background="#E3E5EC"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>

</LinearLayout>