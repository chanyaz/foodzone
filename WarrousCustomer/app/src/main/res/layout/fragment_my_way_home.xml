<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maya.wcustomer.fragments.my_way.MyWayHomeFragment">

    <!-- TODO: Update blank fragment layout -->
  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/coordinatorLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:orientation="horizontal"
              android:background="@color/white"
              android:elevation="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_marginLeft="15dp"
                  android:gravity="center_vertical"
                  android:layout_gravity="center_vertical"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <LinearLayout
                      android:gravity="center_vertical"
                      android:layout_gravity="center_vertical"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                  <com.maya.wcustomer.customviews.SFMediumTextView
                      android:text="ENGINE START"
                      android:textSize="14sp"
                      android:textColor="#27C1CC"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                      <ImageView
                          android:rotation="180"
                          android:src="@drawable/ic_keyboard_arrow"
                          android:layout_width="20dp"
                          android:layout_height="20dp" />
                  </LinearLayout>

                  <com.maya.wcustomer.customviews.SFMediumTextView
                      android:textSize="20sp"
                      android:text="8:14 am"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:layout_marginBottom="5dp"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

              </LinearLayout>
              <LinearLayout
                  android:layout_margin="5dp"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_width="90dp"
                  android:layout_height="50dp">
                  <ImageView
                      android:tint="#816CD4"
                      android:src="@drawable/alert_circle"
                      android:layout_width="10dp"
                      android:layout_height="10dp" />
                  <ImageView
                      android:layout_weight="1"
                      android:src="@drawable/dots"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

                  <ImageView
                      android:tint="#A550AE"
                      android:src="@drawable/alert_circle"
                      android:layout_width="10dp"
                      android:layout_height="10dp" />

              </LinearLayout>
              <LinearLayout
                  android:layout_marginRight="15dp"
                  android:gravity="right"
                  android:layout_gravity="center_vertical"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <LinearLayout
                      android:gravity="right"
                      android:layout_gravity="center_vertical"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <com.maya.wcustomer.customviews.SFMediumTextView
                          android:text="CURRENT"
                          android:ellipsize="end"
                          android:maxLines="1"
                          android:layout_gravity="center_vertical"
                          android:textSize="14sp"
                          android:textColor="#27C1CC"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <ImageView
                          android:layout_marginRight="-5dp"
                          android:rotation="180"
                          android:src="@drawable/ic_keyboard_arrow"
                          android:layout_width="20dp"
                          android:layout_height="20dp" />
                  </LinearLayout>

                  <com.maya.wcustomer.customviews.SFMediumTextView
                      android:textSize="20sp"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:layout_marginBottom="5dp"
                      android:text="8:39 am"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

              </LinearLayout>

          </LinearLayout>
      <RelativeLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <com.google.android.gms.maps.MapView
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_marginBottom="70dp"
              android:id="@+id/mapView" />
         <RelativeLayout
             android:layout_alignParentBottom="true"
             android:layout_width="match_parent"
             android:layout_height="130dp">
              <android.support.v4.view.ViewPager
                 android:id="@+id/viewPager"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

             </android.support.v4.view.ViewPager>

         </RelativeLayout>
      </RelativeLayout>
      </LinearLayout>

  </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
