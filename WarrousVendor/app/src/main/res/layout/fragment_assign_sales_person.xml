<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maya.wadmin.fragments.testdrive.add.AssignSalesPersonFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/coordinatorLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <android.support.v4.widget.SwipeRefreshLayout
          android:id="@+id/swipeRefreshLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
              android:elevation="4dp"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:background="@drawable/corner_radius_white_8"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/imgVehicle"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="5dp"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp"
                      android:src="@drawable/corner_radius_hash_pool_6"
                      android:layout_width="90dp"
                      android:layout_height="65dp" />
                  <LinearLayout
                      android:layout_marginLeft="15dp"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <com.maya.wadmin.customviews.SFBoldTextView
                          android:id="@+id/tvVin"
                          android:maxLines="1"
                          android:textSize="16sp"
                          android:textColor="#5C5C5C"
                          android:text="3KPFL4A74JE177017"
                          android:textStyle="bold"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <com.maya.wadmin.customviews.SFRegularTextView
                          android:id="@+id/tvOther"
                          android:maxLines="1"
                          android:layout_marginTop="7dp"
                          android:textSize="15sp"
                          android:textColor="#C45C5C5C"
                          android:text="Kia Optima 2017 dvdvddvlkmdkvmkdmvkdmvkm"
                          android:textStyle="bold"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />

                  </LinearLayout>

                  <com.maya.wadmin.customviews.SFMediumTextView
                      android:id="@+id/tvEdit"
                      android:gravity="center"
                      android:textSize="15sp"
                      android:textColor="@color/bold_text_color"
                      android:text="Edit"
                      android:layout_marginLeft="5dp"
                      android:layout_gravity="center"
                      android:layout_marginRight="16dp"
                      android:layout_width="50dp"
                      android:layout_height="40dp" />
              </LinearLayout>

          </LinearLayout>

          <com.maya.wadmin.customviews.SFMediumTextView
              android:textSize="18sp"
              android:layout_marginTop="22dp"
              android:layout_marginRight="14dp"
              android:layout_marginBottom="14dp"
              android:layout_marginLeft="14dp"
              android:textColor="@color/mainColorPrimary"
              android:text="Select Sales Person for the drive:"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />


          <android.support.v7.widget.RecyclerView
              android:id="@+id/recyclerView"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


          </android.support.v7.widget.RecyclerView>



      </LinearLayout>
      </android.support.v4.widget.SwipeRefreshLayout>

  </android.support.design.widget.CoordinatorLayout>

        <ProgressBar
            android:layout_alignParentTop="true"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/mainColorPrimary"
            android:indeterminate="true"/>
    </RelativeLayout>

</FrameLayout>
