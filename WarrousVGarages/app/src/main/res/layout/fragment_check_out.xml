<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/frameLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.cart.checkout.CheckOutFragment">

    <!-- TODO: Update blank fragment layout -->



       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:visibility="gone"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.maya.vgarages.customviews.RoundedImageView
                   android:id="@+id/imgGarage"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="15dp"
                   app:siRadius="3dp"
                   app:siBorderWidth="0dp"
                   app:siBorderColor="@color/white"
                   android:backgroundTint="@color/map_transparent"
                   android:background="@drawable/corner_radius_white_3"
                   android:layout_width="60dp"
                   android:layout_height="60dp" />


               <LinearLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:layout_gravity="center_vertical"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <com.maya.vgarages.customviews.WSSemiBoldTextView
                       android:id="@+id/tvGarageName"
                       android:textColor="@color/colorPrimary"
                       android:textSize="15sp"
                       android:text="Gokul Garage"
                       android:maxLines="1"
                       android:ellipsize="end"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

                   <com.maya.vgarages.customviews.WSMediumTextView
                       android:id="@+id/tvAddress"
                       android:textColor="@color/normal_text_color"
                       android:textSize="13sp"
                       android:maxLines="1"
                       android:ellipsize="end"
                       android:layout_marginTop="5dp"
                       android:text="Madhapur, HYderabad"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />




               </LinearLayout>

           </LinearLayout>

           <View
               android:visibility="gone"
               android:background="@color/app_background_color"
               android:layout_width="match_parent"
               android:layout_height="1dp">

           </View>

           <com.maya.vgarages.customviews.WSMediumTextView
               android:visibility="gone"
               android:textSize="14sp"
               android:textColor="@color/light_orange"
               android:text="Services"
               android:layout_margin="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <android.support.v7.widget.RecyclerView
               android:layout_weight="1"
               android:id="@+id/recyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

           </android.support.v7.widget.RecyclerView>
           <LinearLayout
               android:layout_alignParentBottom="true"
               android:elevation="45dp"
               android:background="@color/white"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <android.support.design.widget.CoordinatorLayout
                   android:id="@+id/coordinatorLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <com.maya.vgarages.customviews.WSSemiBoldTextView
                           android:layout_margin="10dp"
                           android:textSize="13sp"
                           android:textColor="@color/black"
                           android:text="Estimated Bill"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />

                       <LinearLayout
                           android:weightSum="2"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <com.maya.vgarages.customviews.WSMediumTextView
                               android:layout_weight="1"
                               android:gravity="left"
                               android:layout_marginLeft="10dp"
                               android:textSize="12sp"
                               android:textColor="@color/gray"
                               android:text="Item Total"
                               android:ellipsize="end"
                               android:maxLines="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />

                           <com.maya.vgarages.customviews.WSMediumTextView
                               android:gravity="right"
                               android:layout_weight="1"
                               android:id="@+id/tvItemsTotal"
                               android:layout_marginRight="10dp"
                               android:textSize="12sp"
                               android:textColor="@color/gray"
                               android:text="Rs. 0"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_marginTop="10dp"
                           android:weightSum="2"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <com.maya.vgarages.customviews.WSMediumTextView
                               android:layout_weight="1"
                               android:gravity="left"
                               android:layout_marginLeft="10dp"
                               android:textSize="12sp"
                               android:textColor="@color/gray"
                               android:text="GST"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />

                           <com.maya.vgarages.customviews.WSMediumTextView
                               android:gravity="right"
                               android:layout_weight="1"
                               android:id="@+id/tvGSTTax"
                               android:layout_marginRight="10dp"
                               android:textSize="12sp"
                               android:textColor="@color/gray"
                               android:text="Rs. 0"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                       <View
                           android:visibility="gone"
                           android:layout_marginTop="20dp"
                           android:background="@color/app_background_color"
                           android:layout_width="match_parent"
                           android:layout_height="1dp">

                       </View>

                       <LinearLayout
                           android:visibility="gone"
                           android:layout_marginTop="10dp"
                           android:weightSum="2"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <com.maya.vgarages.customviews.WSMediumTextView
                               android:layout_weight="1"
                               android:gravity="left"
                               android:layout_marginLeft="10dp"
                               android:textSize="12sp"
                               android:ellipsize="end"
                               android:maxLines="1"
                               android:textColor="@color/gray"
                               android:text="Additional Charges"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />

                           <com.maya.vgarages.customviews.WSMediumTextView
                               android:gravity="right"

                               android:layout_weight="1"
                               android:layout_marginRight="10dp"
                               android:textSize="12sp"
                               android:textColor="@color/gray"
                               android:text="Rs. 0"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                       <View
                           android:layout_marginTop="10dp"
                           android:background="@color/app_background_color"
                           android:layout_width="match_parent"
                           android:layout_height="1dp">

                       </View>

                       <LinearLayout
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:weightSum="2"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <com.maya.vgarages.customviews.WSSemiBoldTextView
                               android:layout_weight="1"
                               android:gravity="left"
                               android:layout_marginLeft="10dp"
                               android:textSize="13sp"
                               android:ellipsize="end"
                               android:maxLines="1"
                               android:textColor="@color/black"
                               android:text="To Pay"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />

                           <com.maya.vgarages.customviews.WSSemiBoldTextView
                               android:gravity="right"
                               android:id="@+id/tvTotalPay"
                               android:layout_weight="1"
                               android:layout_marginRight="10dp"
                               android:textSize="13sp"
                               android:textColor="@color/black"
                               android:text="Rs. 0"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                       <LinearLayout
                           android:background="@color/app_background_color"
                           android:layout_width="match_parent"
                           android:layout_height="35dp">
                           <LinearLayout
                               android:backgroundTint="@color/white"
                               android:background="@drawable/repeated_back"
                               android:layout_marginTop="-8dp"
                               android:layout_marginLeft="-8dp"
                               android:layout_marginRight="-8dp"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="16dp">


                           </LinearLayout>

                       </LinearLayout>

                   </LinearLayout>

               </android.support.design.widget.CoordinatorLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <LinearLayout
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="50dp">



                      <com.maya.vgarages.customviews.WSSemiBoldTextView
                          android:id="@+id/tvAddAppointment"
                          android:visibility="visible"
                          android:textSize="15sp"
                          android:gravity="center"
                          android:background="@color/colorPrimary"
                          android:textColor="@color/white"
                          android:text="ADD APPOINTMENT"
                          android:layout_width="match_parent"
                          android:layout_height="50dp" />

                          <LinearLayout
                              android:id="@+id/llEditAppointment"
                              android:visibility="gone"
                              android:gravity="center"
                              android:layout_gravity="center_vertical"
                              android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="50dp">

                              <com.maya.vgarages.customviews.WSRegularTextView
                                  android:layout_width="wrap_content"
                                  android:text="On 5/4/2018"
                                  android:drawablePadding="10dp"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:drawableRight="@drawable/ic_edit"
                                  android:textSize="11sp"
                                  android:id="@+id/tvDate"
                                  android:textColor="@color/black"
                                  android:layout_marginLeft="15dp"
                                  android:layout_marginRight="15dp"
                                  android:layout_height="wrap_content" />
                              <com.maya.vgarages.customviews.WSSemiBoldTextView
                                  android:id="@+id/tvEdit"
                                  android:visibility="visible"
                                  android:textSize="12sp"
                                  android:layout_marginTop="5dp"
                                  android:layout_marginBottom="5dp"
                                  android:layout_marginLeft="15dp"
                                  android:layout_marginRight="15dp"
                                  android:gravity="center"
                                  android:maxLines="1"
                                  android:ellipsize="end"
                                  android:textColor="@color/light_primary"
                                  android:text="EDIT APPOINTMENT"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" />
                          </LinearLayout>


                  </LinearLayout>
               <com.maya.vgarages.customviews.WSSemiBoldTextView
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:id="@+id/tvProceedToPay"
                   android:textSize="14sp"
                   android:background="@color/green_checkout"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:text="PROCEED TO PAY"
                   android:layout_width="match_parent"
                   android:layout_height="50dp" />
               </LinearLayout>

           </LinearLayout>



       </LinearLayout>





</FrameLayout>