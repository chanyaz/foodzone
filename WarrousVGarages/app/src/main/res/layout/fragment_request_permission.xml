<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.start.RequestPermissionFragment">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<com.airbnb.lottie.LottieAnimationView-->
            <!--android:id="@+id/lottieAnimationView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:lottie_rawRes="@raw/world_locations"-->
            <!--app:lottie_loop="true"-->
            <!--app:lottie_autoPlay="true" />-->

        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:textColor="@color/light_new_gray"
            android:textSize="18sp"
            android:text="Requesting Location Access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.maya.vgarages.customviews.WSRegularTextView
            android:layout_margin="10dp"
            android:textSize="13sp"
            android:textColor="@color/light_gray"
            android:text="inorder to access the app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.maya.vgarages.customviews.WSMediumTextView
            android:id="@+id/tvAllow"
            android:text="Allow"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/corner_radius_white_3"
            android:layout_width="90dp"
            android:layout_height="25dp" />

    </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>



</FrameLayout>