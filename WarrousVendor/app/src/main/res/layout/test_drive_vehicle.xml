<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llhead"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/test_drive_item_selected">
    <LinearLayout
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgVehicle"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/corner_radius_hash_pool_6"
            android:layout_width="90dp"
            android:layout_height="65dp" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.maya.wadmin.customviews.SFBoldTextView
                android:id="@+id/tvVin"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#5C5C5C"
                android:text="3KPFL4A74JE177017"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <com.maya.wadmin.customviews.CircularView
                        android:id="@+id/imgSalesPerson"
                        android:src="@color/app_hash_pool"
                        android:layout_width="42dp"
                        android:layout_height="42dp" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.maya.wadmin.customviews.SFMediumTextView
                        android:id="@+id/tvSalesPerson"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:textColor="#5C5C5C"
                        android:text="Kassandra K"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:scaleType="fitXY"
            android:id="@+id/imgClick"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <ImageView
            android:visibility="visible"
            android:id="@+id/imgOption"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_options"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llhead1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.maya.wadmin.customviews.SFRegularTextView
            android:id="@+id/tvMake"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            android:textColor="#C45C5C5C"
            android:text="Kia"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.maya.wadmin.customviews.SFRegularTextView
            android:id="@+id/tvOther"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:textColor="#C45C5C5C"
            android:text="Optima 2017 dvdvddvlkmdkvmkdmvkdmvkm"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="30dp"
            android:layout_marginLeft="120dp"
            android:background="#E3E5EC"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.maya.wadmin.customviews.SFRegularTextView
                android:layout_marginTop="14dp"
                android:layout_marginLeft="60dp"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/light_new_gray"
                android:text="Client:"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.maya.wadmin.customviews.SFRegularTextView
                android:id="@+id/tvCustomerName"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/light_new_gray"
                android:text="gokulkalagara@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.maya.wadmin.customviews.SFRegularTextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvCustomerPhone"
                android:maxLines="1"
                android:textColor="@color/light_new_gray"
                android:textSize="15sp"
                android:text="202-555-0107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/bottomView"
        android:layout_marginLeft="8dp"
        android:background="#E3E5EC"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
</LinearLayout>