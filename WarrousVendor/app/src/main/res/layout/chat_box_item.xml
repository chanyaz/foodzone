<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            app:cardElevation="5dp"
            android:padding="0dp"
            android:layout_margin="11dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="29dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="58dp"
            android:layout_height="58dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <com.maya.wadmin.customviews.CircularView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:id="@+id/imgPerson"
            android:src="@drawable/ic_profile"
            android:layout_width="58dp"
            android:layout_height="58dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.maya.wadmin.customviews.SFMediumTextView
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:id="@+id/tvChatPerson"
            android:textSize="18sp"
            android:text="Gokul Kalagara"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.maya.wadmin.customviews.SFRegularTextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:id="@+id/tvMessage"
            android:textSize="14sp"
            android:text="life have to dash"
            android:textColor="#505050"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="78dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/card"
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

