<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/llhead"
        android:elevation="4dp"
        android:background="@drawable/corner_radius_white_8"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="89dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maya.wadmin.customviews.SFBoldTextView
                    android:id="@+id/tvSalesPerson"
                    android:maxLines="1"
                    android:textSize="22sp"
                    android:textColor="#5C5C5C"
                    android:text="Kassandra K"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.maya.wadmin.customviews.SFRegularTextView
                    android:id="@+id/tvRole"
                    android:maxLines="1"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:textColor="#C45C5C5C"
                    android:text="Salesperson"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgClick"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_check"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_gravity="center_vertical"
        app:cardElevation="12dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="29.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.maya.wadmin.customviews.CircularView
        android:id="@+id/imgSalesPerson"
        android:src="@color/app_hash_pool"
        android:layout_width="59dp"
        android:layout_height="59dp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>