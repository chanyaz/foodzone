<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_above="@+id/llhead"
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.maya.wadmin.customviews.RBMediumTextView
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:id="@+id/tvTime"
                                android:maxLines="1"
                                android:textSize="18sp"
                                android:textColor="#875C5C5C"
                                android:text="Yesteray, 02:11 PM"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                <android.support.v7.widget.CardView
                                    android:layout_gravity="center_vertical"
                                    app:cardElevation="3dp"
                                    app:cardCornerRadius="20dp"
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <com.maya.wadmin.customviews.CircularView
                                        android:id="@+id/imgSalesPerson"
                                        android:src="@color/app_hash_pool"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp" />
                                </android.support.v7.widget.CardView>

                                <com.maya.wadmin.customviews.RBMediumTextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/tvSalesPerson"
                                    android:maxLines="1"
                                    android:textSize="18sp"
                                    android:textColor="#875C5C5C"
                                    android:text="Kassandra K"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:elevation="4dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/corner_radius_white_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imgVehicle"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@drawable/sample_image1"
                                    android:layout_width="90dp"
                                    android:layout_height="65dp" />
                                <LinearLayout
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.maya.wadmin.customviews.SFBoldTextView
                                        android:id="@+id/tvVin"
                                        android:maxLines="1"
                                        android:textSize="16sp"
                                        android:textColor="#5C5C5C"
                                        android:text="3KPFL4A74JE177017"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <com.maya.wadmin.customviews.SFSemiBoldTextView
                                        android:id="@+id/tvOther"
                                        android:maxLines="1"
                                        android:layout_marginTop="7dp"
                                        android:layout_marginRight="15dp"
                                        android:textSize="15sp"
                                        android:textColor="#C45C5C5C"
                                        android:text="Kia       Optima 2017"
                                        android:textStyle="bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:elevation="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/recyclerView"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </android.support.design.widget.CoordinatorLayout>


        <ProgressBar
            android:layout_marginBottom="85dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/mainColorPrimary"
            android:indeterminate="true"/>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/llhead"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <com.maya.wadmin.customviews.SFBoldTextView
                android:id="@+id/tvCancel"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/unselected_corner_6"
                android:text="Close"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.maya.wadmin.customviews.SFBoldTextView
                android:id="@+id/tvSave"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/corner_radius_primary_6"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
