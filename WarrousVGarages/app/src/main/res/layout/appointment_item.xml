<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="15dp"
    android:elevation="1dp"
    android:foreground="?android:selectableItemBackground"
    android:background="@drawable/corner_radius_white_3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:text="ID:"
            android:textColor="@color/normal_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.maya.vgarages.customviews.WSMediumTextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvId"
            android:text="145"
            android:textColor="@color/hash_text_color"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:paddingLeft="55dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:paddingTop="0dp"
            android:id="@+id/imgOptions"
            android:tint="@color/hash_text_color"
            android:src="@drawable/ic_more"
            android:layout_width="100dp"
            android:layout_height="35dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.maya.vgarages.customviews.WSSemiBoldTextView
            android:text="Estimated Price:"
            android:textColor="@color/normal_text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.maya.vgarages.customviews.WSMediumTextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvEstimatedCost"
            android:text="Rs. 1450"
            android:textColor="@color/hash_text_color"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@color/app_hash_pool"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>
        <com.maya.vgarages.customviews.WSMediumTextView
            android:id="@+id/tvStatus"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_radius_primary_30"
            android:backgroundTint="@color/light_primary"
            android:text="Pending"
            android:textAlignment="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="100dp"
            android:layout_height="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <ImageView
           android:tint="@color/hash_text_color"
           android:src="@drawable/ic_date"
           android:layout_width="20dp"
           android:layout_height="20dp" />
        <com.maya.vgarages.customviews.WSRegularTextView
            android:layout_marginLeft="10dp"
            android:text="5/31/2018"
            android:maxLines="1"
            android:id="@+id/tvDate"
            android:ellipsize="end"
            android:textColor="@color/hash_text_color"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:tint="@color/hash_text_color"
            android:src="@drawable/ic_timer"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <com.maya.vgarages.customviews.WSRegularTextView
            android:layout_marginLeft="10dp"
            android:text="15:48"
            android:maxLines="1"
            android:id="@+id/tvTime"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textColor="@color/hash_text_color"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>